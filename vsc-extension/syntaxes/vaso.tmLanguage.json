{
    "scopeName": "source.vaso",
    "fileTypes": [
        "vs"
    ],
    "name": "Vaso",
    "patterns": [
        {
            "include": "#keywords"
        },
        {
            "include": "#control-flow"
        },
        {
            "include": "#functions"
        },
        {
            "include": "#vbit-logic"
        },
        {
            "include": "#literals"
        },
        {
            "include": "#comments"
        }
    ],
    "repository": {
        "keywords": {
            "patterns": [
                {
                    "name": "keyword.declaration.vaso",
                    "match": "\\b(fn|val|var|use|struct|enum|trait|impl)\\b"
                },
                {
                    "name": "keyword.operator.assignment.vaso",
                    "match": ":="
                }
            ]
        },
        "control-flow": {
            "patterns": [
                {
                    "name": "keyword.control.flow.vaso",
                    "match": "\\b(while|if|else|match|case)\\b"
                },
                {
                    "name": "keyword.control.access.vaso",
                    "match": "\\b(return|break|continue)\\b"
                }
            ]
        },
        "functions": {
            "patterns": [
                {
                    "name": "support.function.built-in.vaso",
                    "match": "\\b(print|call)\\b"
                },
                {
                    "name": "punctuation.definition.function-arrow.vaso",
                    "match": "->"
                }
            ]
        },
        "vbit-logic": {
            "patterns": [
                {
                    "name": "storage.type.vbit.vaso",
                    "match": "\\b(vbit|bool|int|string|float)\\b"
                },
                {
                    "name": "constant.numeric.vbit.vaso",
                    "match": "\\b(0|1|2|3|4|true|false)\\b"
                }
            ]
        },
        "literals": {
            "patterns": [
                {
                    "name": "string.quoted.double.vaso",
                    "match": "\"[^\"]*\""
                },
                {
                    "name": "constant.numeric.integer.vaso",
                    "match": "\\b[0-9]+\\b"
                },
                {
                    "name": "keyword.operator.comparison.vaso",
                    "match": "(==|!=|<=|>=|<|>|\\+=|-|\\+)"
                }
            ]
        },
        "comments": {
            "patterns": [
                {
                    "name": "comment.line.double-slash.vaso",
                    "match": "//.*"
                }
            ]
        }
    }
}